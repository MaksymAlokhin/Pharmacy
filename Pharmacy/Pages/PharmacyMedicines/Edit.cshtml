@page
@model PharmacyApp.Pages.PharmacyMedicines.EditModel

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати</h1>

<h4>Наявність ліків</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PharmacyMedicine.Id" />
            <div class="form-group">
                <label asp-for="PharmacyMedicine.Quantity" class="control-label"></label>
                <input asp-for="PharmacyMedicine.Quantity" class="form-control" />
                <span asp-validation-for="PharmacyMedicine.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyMedicine.Pharmacy" class="control-label"></label>
                <select asp-for="PharmacyMedicine.PharmacyId" class="form-control" asp-items="ViewBag.PharmacyId"></select>
                <span asp-validation-for="PharmacyMedicine.PharmacyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyMedicine.Medicine" class="control-label"></label>
                <select asp-for="PharmacyMedicine.MedicineId" class="form-control" asp-items="ViewBag.MedicineId"></select>
                <span asp-validation-for="PharmacyMedicine.MedicineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Назад до списку
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
