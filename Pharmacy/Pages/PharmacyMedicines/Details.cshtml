@page
@model PharmacyApp.Pages.PharmacyMedicines.DetailsModel

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Наявність ліків</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacyMedicine.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacyMedicine.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacyMedicine.Pharmacy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacyMedicine.Pharmacy.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacyMedicine.Medicine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacyMedicine.Medicine.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PharmacyMedicine.Id"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter"
    >Редагувати</a> |
    <a asp-page="./Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Назад до списку
    </a>
</div>
