@page
@model PharmacyApp.Pages.Pharmacies.CreateModel

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>Аптека</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pharmacy.Name" class="control-label"></label>
                <input asp-for="Pharmacy.Name" class="form-control" />
                <span asp-validation-for="Pharmacy.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pharmacy.City" class="control-label"></label>
                <input asp-for="Pharmacy.City" class="form-control" />
                <span asp-validation-for="Pharmacy.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pharmacy.Manager" class="control-label"></label>
                <select asp-for="Pharmacy.Manager.Id" class="form-control"
                        asp-items="Model.ManagersSelectList">
                    <option value="">--Немає--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
       Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
